{
	"compilerOptions": {
		"jsx": "react",
		"target": "ES6",
		"module": "commonjs",
		"removeComments": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"sourceMap": true,
		"declaration": true,
		"declarationMap": true,
		"allowJs": true,
		"outDir": "./dist",
		"baseUrl": "./src",
		"paths": {
			"__inversify-constants__": ["common/constants.inversify.ts"],
			"__metadata-constants__": ["common/constants.metadata.ts"],
			"@di/*": ["di/*"],
			"@models/*": ["models/*"],
			"@decorators/*": ["decorators/*"]
		}
	},
	"include": [
		"src/**/*",
		"__tests__"
	],
	"exclude": [
		"node_modules",
	]
}