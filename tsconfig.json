{
	"compilerOptions": {
		"jsx": "react",
		"target": "ES6",
		"module": "commonjs",
		"removeComments": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"sourceMap": true,
		"declaration": true,
		"declarationMap": true,
		"allowJs": true,
		"outDir": "./dist"
	},
	"include": [
		"src/**/*"
, "__tests__"	],
	"exclude": [
		"node_modules",
	]
}